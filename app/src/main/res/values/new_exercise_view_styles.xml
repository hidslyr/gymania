<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--New Exercise View Text-->
    <style name ="new_exercise_input_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/new_exercise_input_text_size</item>
        <item name="android:layout_weight">@dimen/new_exercise_input_text_layout_weight</item>
        <item name="android:layout_marginLeft">@dimen/new_exercise_input_text_margin_left</item>
        <item name="android:gravity">center|left</item>
    </style>

    <!--New Exercise View Number Edit Text-->
    <style name ="new_exercise_number_input_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/new_exercise_input_number_edit_text_layout_weight</item>
        <item name="android:inputType">number</item>
    </style>

    <style name ="new_exercise_input_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/new_exercise_input_number_edit_text_layout_weight</item>
        <item name="android:inputType">text</item>
    </style>



</resources>